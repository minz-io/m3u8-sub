{
  "name": "m3u8-sub",
  "scripts": {
    "dev": "bun run --hot src/index.js",
    "build:compile": "bun build src/index.js --compile --outfile ./dist/m3u8-sub",
    "build:linux-x64": "bun build src/index.js --compile --target=bun-linux-x64 --outfile ./dist/m3u8-sub",
    "build:win-x64": "bun build src/index.js --compile --target=bun-windows-x64 --outfile ./dist/m3u8-sub.exe"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "hono": "^4.10.6",
    "lowdb": "^7.0.1",
    "node-schedule": "^2.1.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "license": "Apache-2.0"
}
